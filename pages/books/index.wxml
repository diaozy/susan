<!--
切换图片广告
-->
<swiper autoplay>
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" mode="scaleToFill"/>
    </swiper-item>
  </block>
</swiper>

<scroll-view scroll-y="true" class="container">
	<block wx:for="{{recommends}}" wx:for-item="song">
		<view class="block" bindtap="playTap" data-id="{{song.bookID}}">
			<view class="left">
				<image src="{{song.picUrl}}" mode="aspectFill"/>
			</view>
			<view class="right">
				<view class="content">
					<view>
						<text class="song-name">{{song.name}}</text>	
					</view>
					<view>
						<text class="song-artists">{{song.artists}} </text>
					</view>
				</view>
				<view class="play">
					<image src="../../images/more_new.jpg" mode="scaleToFill"/>
				</view>
			</view>
		</view>	
	</block>
</scroll-view>
