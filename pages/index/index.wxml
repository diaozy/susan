<!--index.wxml-->
<view class="container">
  <image src="../../images/susan.jpg" mode="widthFix"  ></image>
  <text>听力小助手\n</text>

  <view class="flex-wrp" style="flex-direction:row;">
  <image wx:for="{{pictures}}" bindLoad="imageLoad"  style="width:250rpx; height:350rpx"  wx:key="unique" src="{{item}}" data-index="{{index}}" mode="scaleToFill"> </image>
  </view>

  <audio poster="{{poster}}" name="{{name}}" author="{{author}}" src="{{src}}" id="myAudio" controls loop="false"></audio>

<button type="default" bindtap="audioPlay" plain="true" size="mini">播放</button>  <button type="default" bindtap="audioPause" plain="true" size="mini">暂停</button>


</view>

